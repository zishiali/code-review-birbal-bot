{
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "node": true
  },
  "ignorePatterns": [
    "dist/*",
    "jsOutput/*"
  ],
  "rules": {
    "indent": ["error", 2],
    "new-cap": ["error", { "capIsNewExceptionPattern": "^express\\.."}],
    "comma-dangle": ["warn"],
    "max-len": ["error", {"code": 200, "tabWidth": 2, "ignoreUrls": true}],
    "no-unused-vars": ["error", { "vars": "all", "args": "none" }],
    "no-param-reassign": ["error", { "props": false }]
  }
}

